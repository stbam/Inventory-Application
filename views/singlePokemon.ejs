<div class="outerdex">
    <div class="new">
        <form action="individualPokemon" method="post">
            <div  class="inner-container2">
                <div>

                
                <label for="type">Type:</label>               
                <input type="text" name="type" id="type"required placeholder="type">
            </div>

            <div>
                <label for="imageUrl" ></label>
                <input type="hidden" name="imageUrl" id="imageUrl" value="<%= imageUrl %>" >

            </div>
           
            <div>
                <label for="forms">Forms</label>
                <input type="text" name="forms" id="forms" placeholder="forms">
            </div>
                <div>
                    <label for="name">Name:</label>
                    <input type="text" name="name" id="name" required placeholder="name">
                </div>
                
                <div>
                    <label for="height">Height:</label>
                    <input type="text" name="height" id="height" placeholder="height" pattern="[0-9]+">
                </div>
               <div>
                <label for="weight">Weight:</label>
                <input type="text" name="weight" id="weight" placeholder="weight" pattern="[0-9]+">
               </div>
                
                <input type="hidden" name="_id" value="<%= _id %>">

            
                <button type="submit" id="update">Update</button>


            </form>


        
    </div>
    
    </div>

    <div class="pokedex">
                            <div class="container">       
                           <form class="form" action="individualPokemon" method="post">
                           <div  class="inner-container">
                            <div>

                                <div class="type">
                                    <label for="type"> <p>Type: <%= type %></p></label>
                                    
                                    <input type="hidden" name="type" id="type"required>
                                </div>
                               
                            <div class="pokeimage">
                                <label for="imageUrl"><img id="image" src="<%= imageUrl %>" alt="Pokemon Image"></label>
                                <input type="hidden" name="imageUrl" id="imageUrl" value="<%= imageUrl %>" >
                            </div>

                            <div class="name">
                                <label for="name"><p>Name: <%= name %></p></label>
                                <input type="hidden" name="name" id="name" required>
                            </div>

                        </div>
                        <div class="options">
                            <input type="hidden" name="_id" id="" value="<%= _id %>"required>        
                            
                           
                        </div>
                    </div> 
                    
                        <div class="extra-info">

    
                            <div class="height">
                                <label for="height">  <p>Height: <%= height %></p></label>
                                <input type="hidden" pattern="\d*" title="Only Numbers are allowed" name="height" id="height"required>
                            </div>
                            

                            <div class="forms">
                                <label for="forms">   <p>Forms:<%=forms %></p></label>
                                <input type="hidden" name="forms" id="forms">
                            </div>                            
                            <div class="weight">
                                <label for="weight">  <p>Weight: <%=weight%></p></label>
                                <input type="hidden" name="weight" id="weight">
                            </div>
                        </div>
                               

                            
                        </form>
                    </div>    
                </div>     
            </div>
            

